<div class="container">
  <h2 class="mt-2">My list</h2>

<div class="list-wrapper row">
  <% @lists.each do |list| %>
    <div class="col-4 mb-3 ">
      <%= link_to list_path(list), class: "text-decoration-none" do %>
      <div class="card-category rounded-3 shadow-sm" 
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <p>Lista de <%= list.name %></p> 
      </div>
      <% end %>
    </div>
  <% end %>
</div>







